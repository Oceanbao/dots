#include dracula.conf
#include darkpastel.conf
include ayu.conf
#include onedark.conf

background_opacity 0.9

#font_family JetBrains Mono
#bold_font JetBrains Mono Bold
#italic_font JetBrains Mono Italic
#bold_italic_font JetBrains Mono Bold Italic

# font_family FiraCode Nerd Font Mono
# bold_font FiraCode Nerd Font Mono Bold
# italic_font FiraCode Nerd Font Mono Italic
# bold_italic_font FiraCode Nerd Font Mono Bold Italic

# font_family		Victor Mono Light
# bold_font		Victor Mono Bold
# italic_font		Victor Mono Italic
# bold_italic_font	Victor Mono Bold Italic
# adjust_column_width	120%

font_family	DroidSansMono Nerd Font
bold_font		auto
italic_font   auto
bold_italic_font	auto

font_size 16
adjust_line_height 100%

cursor_blink_interval 0
window_padding_width 5
hide_window_decorations yes
remember_window_size  no
initial_window_width  1000
initial_window_height 650
enable_audio_bell no

map f1 copy_to_buffer a
map f2 paste_from_buffer a

macos_option_as_alt yes


# BEGIN_KITTY_THEME
# Campbell
include current-theme.conf
# END_KITTY_THEME